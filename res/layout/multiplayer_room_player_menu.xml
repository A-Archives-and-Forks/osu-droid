<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frg_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frgDialogStyleBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fullLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_half_top"
        android:backgroundTint="#13131A"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/room_player"
            style="@style/settings_tab_divider"
            android:text="Player" />

        <Button
            android:id="@+id/room_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/account_box_24px"
            android:drawablePadding="0dp"
            android:text="Visit profile" />

        <Button
            android:id="@+id/room_mute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/volume_off_24px"
            android:drawablePadding="0dp"
            android:text="Mute" />

        <Button
            android:id="@+id/room_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/shield_person_24px"
            android:drawablePadding="0dp"
            android:text="Make room host" />

        <Button
            android:id="@+id/room_kick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#592424"
            android:drawableLeft="@drawable/person_remove_24px"
            android:drawablePadding="0dp"
            android:drawableTint="#FFBFBF"
            android:text="Kick"
            android:textColor="#FFBFBF" />

    </LinearLayout>

</RelativeLayout>