<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Player options">

        <ListPreference
                android:key="player_team"
                android:title="Team"
                android:entries="@array/team_names"
                android:entryValues="@array/team_values"
                android:summary="Change team"
        />

        <CheckBoxPreference
                android:key="player_nightcore"
                android:title="Use NightCore instead of DoubleTime"
        />

        <CheckBoxPreference
                android:key="showscoreboard"
                android:title="Show leaderboard"
        />

        <CheckBoxPreference
                android:key="enableStoryboard"
                android:title="@string/opt_enableStoryboard_title"
        />

        <CheckBoxPreference
                android:key="enableVideo"
                android:title="Enable video"
        />

    </PreferenceCategory>

</PreferenceScreen>